@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Game", null,
    new { @class = "btn" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Game",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = "btn"
            + (link == ViewBag.SelectedCategory ? " btnSel" : "")
    })
}